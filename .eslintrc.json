{
  "extends": "next/core-web-vitals",
  "rules": {
    "quotes": [2, "double", { "avoidEscape": true }],
    "indent": ["error", "tab"],
    "semi": ["error", "always"],
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreComments": true, //"comments": 80
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
